{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
  {
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "jsx": "preserve",
      "strict": true,
      "esModuleInterop": true,
      "lib": [
        "es2018",
        "esnext.asynciterable"
      ]
    }
    "exclude": [
      "node_modules"
    ]
  }
}

